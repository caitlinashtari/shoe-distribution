<h1>Shoe Distribuition Center</h1>

<div class="card-panel teal lighten-2">
  <h4>Add A Store</h4>

  <form action="/stores" method="post">
    <label for="store_name">Store Name:</label>
    <input id="store_name" name="store_name" type="text">

    <button class="btn-floating btn-large waves-effect waves-light red" type="submit">Add Store</button>
  </form>

  <br>

  <h4> Add A Shoe Brand</h4>

  <form action="/shoes" method="post">

    <label for="shoe_name">Shoe Brand:</label>
    <input id="shoe_name" name="shoe_name" type="text">
    <br>
    <button class="btn-floating btn-large waves-effect waves-light red" type="submit">Add Shoe</button>
  </form>
</div>

<div class ="all-stores">
  <% if @stores.any?() %>
  <h5>Click on a store to see its shoes</h5>

  <ul class ="collection">
    <% @stores.each do |store| %>
    <li><a href="/stores/<%= store.id() %>" class="collection-item"><%= store.name() %></a></li>
    <% end %>
  </ul>

  <% else %>
  <p>There are no stores yet!</p>
  <% end %>

  <% if @shoes.any?() %>
  <h5>Click on a shoe to see its stores</h5>

  <ul class ="collection">
    <% @shoes.each do |shoe| %>
    <li><a href="/shoes/<%= shoe.id() %>" class="collection-item"><%= shoe.name() %></a></li>
    <% end %>
  </ul>

  <% else %>
  <p>There are no shoes yet!</p>
  <% end %>
</div>
